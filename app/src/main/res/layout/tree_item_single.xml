<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/treeItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/buttonItemMove"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="centerInside"
        android:src="@drawable/reorder" />

    <CheckBox
        android:id="@+id/cbItemSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_toEndOf="@+id/buttonItemMove"
        android:gravity="center"
        android:padding="0dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvItemContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/cbItemSelected"
        android:layout_toStartOf="@+id/buttonItemEnter"
        android:text=""
        android:gravity="start|center_vertical"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/buttonItemEnter"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="0dp"
        android:layout_toStartOf="@+id/buttonItemAdd"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingStart="2dp"
        android:paddingTop="6dp"
        android:paddingEnd="2dp"
        android:paddingBottom="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_forward" />

    <ImageButton
        android:id="@+id/buttonItemAdd"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="0dp"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingStart="2dp"
        android:paddingTop="6dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/plus" />

</RelativeLayout>