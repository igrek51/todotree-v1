<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/treeItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/buttonItemMove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/reorder"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="centerInside" />

    <CheckBox
        android:id="@+id/cbItemSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_toRightOf="@+id/buttonItemMove"
        android:layout_toEndOf="@+id/buttonItemMove"
        android:gravity="center"
        android:padding="0dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvItemContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/cbItemSelected"
        android:layout_toEndOf="@+id/cbItemSelected"
        android:layout_toLeftOf="@+id/buttonItemEnter"
        android:layout_toStartOf="@+id/buttonItemEnter"
        android:text=""
        android:gravity="start|center_vertical"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/buttonItemEnter"
        android:layout_gravity="start|center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonItemAdd"
        android:layout_toStartOf="@+id/buttonItemAdd"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:focusable="false"
        android:padding="4dp"
        android:focusableInTouchMode="false"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_forward" />

    <ImageButton
        android:id="@+id/buttonItemAdd"
        android:layout_gravity="end|center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:background="?android:selectableItemBackground"
        android:focusable="false"
        android:padding="4dp"
        android:focusableInTouchMode="false"
        android:scaleType="centerInside"
        android:src="@drawable/plus" />

</RelativeLayout>